<Context path="/storyteller" reloadable="true" docBase="storyteller" >
<!-- Extra info begin -->

    <Resource
        name="jdbc/storyteller"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost/storyteller?useUnicode=true&amp;characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull&amp;autoReconnect=true"
        username="storyteller"
        password="storyteller"
         removeAbandonedTimeout="60"
         removeAbandoned="true"
         logAbandoned="true"

maxWait="100"
maxActive="70"
maxIdle="90"
    />
	<Logger className="org.apache.catalina.logger.SystemOutLogger" verbosity="4" timestamp="true"/>
</Context>
